#include<iostream>
#include<fstream>
#include<string>

using namespace std;

int main()
{
	setlocale(0,"RUSSIAN"); 
	
	string buff;            
	string infilepath;     
	string outfilepath;    
	string name;           
	
	cout<<" Óêàæèòå ïîëíûé ïóòü ê ôàéëó: ";
	getline(cin, infilepath);               
	cout<<"\n À òàêæå èìÿ è ôîðìàò ôàéëà: ";
	getline(cin, name);                       
	ifstream fin(infilepath.c_str());          
	if(!fin.is_open())                        
	{
		cout<<" Îøèáêà, ôàéë íå ñóùåñòâóåò.";
		return -1;
	} else
	getline(fin, buff);                      
	fin.close();                            
	system("cls");                         
	
	cout<<" Óêàæèòå, êóäà ïîìåñòèòü êîïèþ ôàéëà, à òàêæå åãî íàçâàíèå è ôîðìàò: ";
	getline(cin, outfilepath);                      
	ofstream fout(outfilepath.c_str());                                
	fout<<buff;                                    
	fout.close();                                 
	system("cls");                                
	
	ofstream xml("Text.xml");                
	xml<<"Èìÿ ôàéëà: " + name + "\nÈñõîäíûé ïóòü ôàéëà: " + infilepath + "\nÏóòü ïîìåùåíèÿ êîïèè: " + outfilepath;
		
	return 0;
}
